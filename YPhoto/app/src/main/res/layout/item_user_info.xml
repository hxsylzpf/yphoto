<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">
    <com.yphoto.zhzhi.yphoto.tools.CircleImageView
        android:id="@+id/user_avatar"
        android:src="@drawable/avatar1"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/item_type_icon"
        android:src="@drawable/up_left"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/user_avatar"
        android:layout_toLeftOf="@id/item_type_icon"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/screen_name"
            android:text="IT周见智"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_detail"
            android:text="该用户很懒，什么都没设置"
            android:textSize="12sp"
            android:textColor="@color/colorStatusDetailTextLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/colorSeparator"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>
</RelativeLayout>